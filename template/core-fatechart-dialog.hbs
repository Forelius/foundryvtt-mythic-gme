<form>
    <label for="mgme_odds">{{localize "Odds"}}:</label>
    <select name="Odds" id="mgme_odds" style="margin-bottom: 10px;">
        <option value="i">{{localize "MGME.Impossible"}}</option>
        <option value="nw">{{localize "MGME.NoWay"}}</option>
        <option value="vu">{{localize "MGME.VeryUnlikely"}}</option>
        <option value="u">{{localize "MGME.Unlikely"}}</option>
        <option value="ff" selected>{{localize "MGME.fiftyfifty"}}</option>
        <option value="sl">{{localize "MGME.SomewhatLikely"}}</option>
        <option value="l">{{localize "MGME.Likely"}}</option>
        <option value="vl">{{localize "MGME.VeryLikely"}}</option>
        <option value="nst">{{localize "MGME.NearSureThing"}}</option>
        <option value="ast">{{localize "MGME.SureThing"}}</option>
        <option value="htb">{{localize "MGME.HasToBe"}}</option>
    </select>
    <label for="mgme_chaos" style="margin-left: 5px;">{{localize "MGME.ChaosRank"}}:</label>
    <select name="Chaos" id="mgme_chaos" style="margin-bottom: 10px;">
        {{chaosRankOptions}}
    </select><br>
    <label for="mgme_question">{{localize "MGME.Question"}} ({{localize "MGME.Optional"}}):</label>
    <input id="mgme_question" style="margin-bottom:10px;width: 260px;" placeholder="{{localize "MGME.Question"}}"/>
</form>